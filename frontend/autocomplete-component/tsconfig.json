{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
  },
  "include": [
    "src",
    "jest.setup.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}